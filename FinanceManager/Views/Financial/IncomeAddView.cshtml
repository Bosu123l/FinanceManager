@model Domain.Models.Income

@using (Html.BeginForm("AddAmount", "Financial", FormMethod.Post, new { id = "ID" }))
            {

    @Html.Label("Amount: ");   @Html.TextBoxFor(x => x.Amount);
    <br />

    List<SelectListItem> elements = new List<SelectListItem>();

    foreach (Domain.Models.SourceOfAmount type in ViewBag.Type)
    {
        elements.Add(new SelectListItem()
        {
            Value = type.ID.ToString(),
            Text = type.Name,

        });
    }

    @Html.Label("Type: ");   @Html.DropDownListFor(x => x.SourceID, new List<SelectListItem>(elements), (SelectListItem)ViewBag.ItemSelected);

    <br />
    @Html.Label("Description: "); @Html.TextAreaFor(x => x.Description);
    <br />

    <input type="submit" value="Dodaj Kwote" />

}
