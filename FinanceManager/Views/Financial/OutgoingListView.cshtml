@model Domain.Models.Outgoing

@{
    double suma = 0;
    <Table class="table">
        @*@using(Html.BeginForm(""))*@
        <tr>
            <th>Amount:</th>
            <th>Date:</th>
            <th>Type:</th>
            <th>Description:</th>
        </tr>
        @foreach (Domain.Models.Outgoing income in ViewBag.Outgoing)
        {
            <tr>
                <th>@Html.Label(string.Format("{0}zł", income.Amount)) </th>
                <th>@Html.Label(income.Date.ToString()) </th>
                <th>@Html.Label(income.Type.Name) </th>
                <th>@Html.Label(income.Description != null ? income.Description : string.Empty) </th>
            </tr>
            suma += income.Amount;
        }
        <tr>
            <th>@Html.Label("Suma: ")</th>
            <th>@Html.Label(string.Format("{0}zł", suma))</th>
        </tr>
    </Table>
}