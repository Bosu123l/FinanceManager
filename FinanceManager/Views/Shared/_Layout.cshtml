<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @*<a class="navbar-brand" href="#">WebSiteName</a>*@
                @Html.ActionLink("Financial Manager", MVC.Home.Index(), new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">

                <li>@Html.ActionLink("Bilans", MVC.FinancialBalance.Index(), new { @class = "active" })</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Zarządzaj
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Dodaj", MVC.FinancialManager.ManageAdd())</li>
                        <li>@Html.ActionLink("Edytuj/Usuń", MVC.FinancialManager.ManageEdit())</li>
                
                    </ul>
                 

                </li>

                <li>@Html.ActionLink("Raport", MVC.FinancialRaports.Index())</li>
            </ul>
        </div>
    </nav>
 
    <div class="container body-content">
        <table style="width:auto" class="nav nav-justified" id="tbPerson"></table>
    </div>

    <div class="body-content ">
        @RenderBody()
        <hr />
        @{Html.RenderPartial("_Footer");}
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>