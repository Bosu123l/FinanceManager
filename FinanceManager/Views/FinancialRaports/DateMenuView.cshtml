@using Domain.Models;
<table class="container">

    <tr>
        <th>
            <fieldset>
                @using (Html.BeginForm("CalculateFromSpecificYear", "FinancialRaports"))
                {

                    List<SelectListItem> elements = new List<SelectListItem>();
                    for (int i = DateTime.Now.Year; i > 1920; i--)
                    {
                        elements.Add(new SelectListItem()
                        {
                            Value = i.ToString(),
                            Text = i.ToString(),

                        });
                    }

                    @Html.DropDownList("year", new List<SelectListItem>(elements), new { @class = "form-control", @type = "date" });

                    <button type="submit" class="form-control">Rok</button>

                }
            </fieldset>
        </th>
        <th>
            <fieldset>
                @using (Html.BeginForm("CalculateFromSpecificMonth", "FinancialRaports"))
                {
                    @Html.Editor("selectedMonth", "", new { htmlAttributes = new { @Value = FinanceManager.Models.GlobalViariables.DateFromIncoming.Value.Month, @class = "form-control", @type = "month" } })
                 

                    <button id="test2" class="form-control">Miesiąc</button>
                }
            </fieldset>
        </th>
        <th>
            <fieldset>
                @using (Html.BeginForm("CalculateBetwenDate", "FinancialRaports"))
                {
                    <table>
                        <tr>
                            <th>
                           
                                @Html.Editor("dateFrom","", new { htmlAttributes = new { @Value =FinanceManager.Models.GlobalViariables.DateFromIncoming.Value.ToString("d"), @class = "form-control", @Type = "date" } })
                            </th>
                            <th>
                                @Html.Editor("dateTo", "", new { htmlAttributes = new { @Value = FinanceManager.Models.GlobalViariables.DateToIncoming.Value.ToString("d"), @class = "form-control", @Type = "date" } })
                            </th>
                        </tr>
                    </table>
                    <button class="form-control">Od-Do</button>
                }
            </fieldset>
        </th>
        <th>
            @*@using (Html.BeginForm())
                {*@
            <button class="form-control">Od początku</button>
            @*}*@
        </th>
    </tr>
</table>

<script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>